<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Gridroom" suffix=" - Gridroom">
      {assigns[:page_title]}
    </.live_title>
    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Gridroom" />
    <meta property="og:title" content={assigns[:og_title] || assigns[:page_title] || "Gridroom"} />
    <meta property="og:description" content={assigns[:og_description] || "A liminal space for conversations. Explore the grid, find your corner."} />
    <meta name="description" content={assigns[:og_description] || "A liminal space for conversations. Explore the grid, find your corner."} />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={assigns[:og_title] || assigns[:page_title] || "Gridroom"} />
    <meta name="twitter:description" content={assigns[:og_description] || "A liminal space for conversations. Explore the grid, find your corner."} />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        setTheme(localStorage.getItem("phx:theme") || "system");
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        window.addEventListener("phx:set-theme", ({ detail: { theme } }) => setTheme(theme));
      })();
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
